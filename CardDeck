import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;
import java.util.ArrayList;
import java.util.List;

public class CardDeck {
	String[] lineStrArr = new String[5];
	List StartDeck = new ArrayList<>(17);
	List<List> ShuffleDeck = new ArrayList<>();
	List<String> LineStrArr = new ArrayList<>();
	IndividualCardTest cards;
	List Deck;

	public void setUpDeck() throws IOException {
		String line;

		BufferedReader br = new BufferedReader(new FileReader("StarCitizenDeck.txt"));
		// data structure for inserting the values
		while ((line = br.readLine()) != null) {
			// split the line you read after the
			System.out.println(line);
			StartDeck.add(separateDeck(line));

		}

		br.close();
	}

	public List<IndividualCardTest> separateDeck(String line) {
		try {
			lineStrArr = line.split("\\s+");
			Deck = new ArrayList<>();
			System.out.println(lineStrArr[1]);

			// for (int i = 0; i < lineStrArr.length; i++) {
			// cards = new IndividualCardTest((lineStrArr[0]),
			// Integer.parseInt(lineStrArr[1]),
			// Integer.parseInt(lineStrArr[2]), Integer.parseInt(lineStrArr[3]),
			// Integer.parseInt(lineStrArr[4]), Integer.parseInt(lineStrArr[5]));
			// System.out.println(cards);
			// }
			Deck.add(lineStrArr[0]);
			Deck.add(Integer.parseInt(lineStrArr[1]));
			Deck.add(Integer.parseInt(lineStrArr[2]));
			Deck.add(Integer.parseInt(lineStrArr[3]));
			Deck.add(Integer.parseInt(lineStrArr[4]));
			Deck.add(Integer.parseInt(lineStrArr[5]));

		} catch (Exception e) {

		}
		return Deck;

	}

	public List getStartDeck() {

		try {
			setUpDeck();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		return StartDeck;
	}
}
