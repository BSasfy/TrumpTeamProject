	private String name;
	
	// got names from "Dealing"
	private ArrayList<Card> AIDeck1 = new ArrayList<Card>();
	private ArrayList<Card> AIDeck2 = new ArrayList<Card>();
	private ArrayList<Card> AIDeck3 = new ArrayList<Card>();
	private Random r;
	
	//constructor
	public Bot(String name, ArrayList<Card> AIDeck) {
		super(name,AIDeck);
		name = "AI"+ r.nextInt();
		
	}
	// add bot to the game, allocate shuffled AIDecks
	// @param int j - number of bots
	public void addBot(int j) {
		if(j==1) {
			Bot bot = new Bot(name, AIDeck1);
		}else if(j==2){
			Bot bot = new Bot(name, AIDeck1);
			Bot bot1 = new Bot(name, AIDeck2);	
		}else {
			Bot bot = new Bot(name, AIDeck1);
			Bot bot1 = new Bot(name, AIDeck2);
			Bot bot2 = new Bot(name,AIDeck3);
		}
	}
	
	//I am not really sure about Active thing
	public void howToplay() {
		if(getActive()) {
			playGood();	
		}else {
			nonActive();
		}
	}
	// choose max category
	public double playGood() {
		attribute.get(0);
		double max=0;
		for(int i = 0; i<attribute.size();i++) {
			double a = getAttribute(i);
			if (a>getAttribute(i) ) {
				max = a;
				
			}
		}
		return max;
	}
